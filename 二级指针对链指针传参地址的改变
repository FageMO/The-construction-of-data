#include <iostream>
using namespace std;
void Test(int** p) {//这个p地址是存着q地址的地址，还多了一层解引用
	int* s = *p;//利用二级指针来传指针地址，创建一个新指针赋值改变传进来给二级指针的指针（这个是先赋值给指针在改变）
	for (int i = 0; i < 5; i++) {
		cin >> s[i];
	}

}
int main() {
	int* q = new int[10];
	Test(&q);
	for (int i = 0; i < 5; i++) {
		cout << q[i];
	}
	return 0;
}



#include <iostream>
using namespace std;
void Test(int** p) {
	int* s = new int[10];
	for (int i = 0; i < 5; i++) {
		cin >> s[i];
	}
	*p = s;//先给指针赋值，再通过二级指针来传参给外面链指针
}
int main() {
	int* q = nullptr;
	Test(&q);
	for (int i = 0; i < 5; i++) {
		cout << q[i];
	}
	return 0;
}
